{% verbatim %}
    <div class="cms_from_various_snippets_container panel panel-info content-block-sidebar {{ className }}">
        <div class="article-state-controls">

            <div class="article-state-controls__toggle-preview js-sidebar-preview-area">

                <div class="state-toggle">
                    <input class="switch-toggle-input visuallyhidden" type="checkbox" id="state-toggle-input" name="state-toggle" value="" {{#compare enabled 1 operator='==' }}checked=""{{/compare}}>
                    <label class="switch-toggle-label" for="state-toggle-input">
                        <div class="switch-toggle__switch"></div>
                        <div class="switch-toggle__label switch-toggle__label--active">Enabled</div>
                        <div class="switch-toggle__label switch-toggle__label--inactive">Disabled</div>
                    </label>
                </div>

                {{#compare canBePreviewed 1 operator='==' }}
                    <a class="page-overview__preview link js-orm-preview" href="#">
                        <i class="icon icon--preview icon--l"></i><span class="button-label">Preview</span>
                    </a>
                {{/compare}}
            </div>

            <ul class="js-article-version-list article-version-list">
                <li class="article-version-list__active-item">
                    <!--
                    {{#compare isRestoringFromVersion 1 operator='!=' }}
                        Current version
                    {{/compare}}

