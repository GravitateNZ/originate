                    {{/compare}}
                {{/compare}}

                <!-- Current -->
                {{#compare isRestoringFromVersion 1 operator='!=' }}
                    <button class="button button--article-state button--article-publish js-orm-apply" type="button" value="Apply">Save</button>
                    {{#compare canBePreviewed 1 operator='==' }}
                        {{#compare isNew 1 operator='!=' }}
                            <button class="button--article-link js-orm-draft" type="button">Save as new draft version</button>
                        {{/compare}}
