{% extends 'cms/base.twig' %}
{% block extraBody %}data-class="_Model"{% endblock %}

{% set models = model.data('_Model') %}

{% block container %}
    <div id="h1">
        <h1>Models</h1>
        <a class="addForm button" href="/manage/admin/model-builder/new">Add new model â€º</a>
    </div>

    <table class="contentListTable">
        <tbody>
            <tr>
                <td class="tableHead" width="180px">Class</td>
                <td class="tableHead">Name</td>
                <td class="tableHead" width="120px">Type</td>
                <td class="tableHead" width="180px" align="right">Action</td>
            </tr>
        </tbody>
        <tbody class="js-sort-column">
            {% for itm in models %}
                <tr id="{{ itm.id }}" class="js-orm-info">
                    <td class="tableLine">{{ itm.className }}</td>
                    <td class="tableLine">{{ itm.title }}</td>
                    <td class="tableLine">
                        {% if itm.modelType == 0 %}
                            Customised
                        {% elseif itm.modelType == 1 %}
                            Built in
                        {% endif %}
                    </td>
                    <td  class="tableLine" align="right">
                        <a href="#" class="js-orm-status" data-status="{{ itm.status }}"><img src="/cms/images/dot{{ itm.status ? 'Green' : 'Red' }}.gif" alt="" border="0"></a>
                        <a href="/manage/admin/model-builder/{{ itm.id }}"><img src="/cms/images/editIcon.gif" alt="Edit Record" title="Edit Record" border="0"></a>
                        <a href="/manage/admin/model-builder/copy/{{ itm.id }}"><img src="/cms/images/cloneIcon.gif" alt="Copy Record" title="Copy Record" border="0"></a>
                        <a href="#" class="js-orm-delete"><img alt="Delete Record" title="Delete Record" src="/cms/images/binIcon.gif" border="0"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}