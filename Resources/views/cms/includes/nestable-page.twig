{% macro nest(node, ormModel, depth) %}
    {% from _self import nest as nest %}
    <li class="dd-item dd3-item content-container {% if node.closed == 1 %}dd-collapsed{% endif %} js-orm-info" id="{{ node.id }}" data-id="{{ node.id }}">
        <div class="dd-handle dd3-handle"></div>
        <div class="dd-handle dd3-handle"></div>
        <div class="dd3-content">
            <span class="dd3-content__title">
                {{ node.title }} 
            </span>
            {% if node.extra1 %}<span class="dd-item__hide-from-nav hide-from-cms-nav">Hidden - CMS</span>
            {% endif %} 
            {% if node.extra2 %}<span class="dd-item__hide-from-nav hide-from-web-nav">Hidden - Web</span>{% endif %}


            {% if node.extraInfo is defined %}
                <a class="dd-item__link-url" href="{{ node.extraInfo }}" target="_blank">{{ node.extraInfo }}</a>
            {% endif %}
            
            <a style="right: 5.9em;" class="state change-state js-orm-status" href="#" data-status="{{ node.status }}"><img src="/cms/images/dot{{ node.status ? 'Green' : 'Red' }}.gif" alt="" border="0"></a>
            <a style="right: 4.1em;" class="edit" href="/manage/admin/orms/{{ ormModel.className }}/{{ node.id }}?returnUrl={{ app.request.uri|url_encode }}"><img src="/cms/images/editIcon.gif" alt="Edit Record" title="Edit Record" border="0"></a>
            <a style="right: 2.3em;" class="state copy" href="/manage/admin/orms/{{ ormModel.className }}/copy/{{ node.id }}?returnUrl={{ app.request.uri|url_encode }}"><img src="/cms/images/cloneIcon.gif" alt="Copy Record" title="Copy Record" border="0"></a>
            <a style="right: 0.5em;" class="delete js-orm-delete" href="#"><img alt="Delete Record" title="Delete Record" src="/cms/images/binIcon.gif" border="0"></a>
            
            
        </div>
        {% if node.children|length %}
            <ol class="dd-list" {% if node.closed == 1 %}style="display: none;"{% endif %}">
                {% for itm in node.children %}
                    {{ nest(itm, ormModel, depth + 1) }}
                {% endfor %}
            </ol>
        {% endif %}
    </li>
{% endmacro %}
